<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>github-monitoring</artifactId>
    <groupId>no.digipost</groupId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>github-monitoring</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <kotlin.code.style>official</kotlin.code.style>
        <kotlin.compiler.jvmTarget>25</kotlin.compiler.jvmTarget>
        <apollo.version>3.8.6</apollo.version>
        <jackson.version>2.16.0</jackson.version>
        <kotlin.version>2.3.0</kotlin.version>
        <digipost.base.image>digipost.azurecr.io/infrastructure/docker-openjdk@sha256:1ecfd9f26e834b05a24c19cf0878495646e1d48a7d7b8b9e63d26d2048974df4</digipost.base.image>
    </properties>

    <dependencies>
        <dependency>
            <groupId>no.digipost</groupId>
            <artifactId>digipost-micrometer-prometheus</artifactId>
            <version>3.6.0</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.5</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>runtime</scope>
            <version>1.5.23</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.janino</groupId>
            <artifactId>janino</artifactId>
            <version>3.1.9</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.logstash.logback</groupId>
            <artifactId>logstash-logback-encoder</artifactId>
            <version>8.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
        <dependency>
            <groupId>com.apollographql.apollo3</groupId>
            <artifactId>apollo-api-jvm</artifactId>
            <version>${apollo.version}</version>
        </dependency>
        <dependency>
            <groupId>com.apollographql.apollo3</groupId>
            <artifactId>apollo-runtime-jvm</artifactId>
            <version>${apollo.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.10.1</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.github.aoudiamoncef</groupId>
                <artifactId>apollo-client-maven-plugin</artifactId>
                <version>7.0.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <services>
                                <github-complete-api>
                                    <enabled>true</enabled>
                                    <addSourceRoot>true</addSourceRoot>
                                    <sourceFolder>${project.basedir}/src/main/graphql/github</sourceFolder>
                                    <schemaPath>${project.basedir}/src/main/graphql/github/schema.graphqls</schemaPath>
                                    <compilationUnit>
                                        <name>github</name>
                                        <outputDirectory>
                                            ${project.build.directory}/generated-sources/
                                        </outputDirectory>
                                        <compilerParams>
                                            <generateKotlinModels>true</generateKotlinModels>
                                            <targetLanguage>KOTLIN_1_5</targetLanguage>
                                            <schemaPackageName>com.github.graphql.client</schemaPackageName>
                                            <packageName>com.github.graphql.client</packageName>
                                        </compilerParams>
                                    </compilationUnit>
                                </github-complete-api>
                            </services>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.14.1</version>
                <configuration>
                    <release>${kotlin.compiler.jvmTarget}</release>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.5.4</version>
            </plugin>

            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <version>4.0.0</version>
                <configuration>
                    <includeOnlyProperties>
                        <includeOnlyProperty>^git.build.(time|version)$</includeOnlyProperty>
                        <includeOnlyProperty>^git.commit.id.(abbrev|full)$</includeOnlyProperty>
                    </includeOnlyProperties>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <from>
                        <image>${digipost.base.image}</image>
                    </from>
                    <to>
                        <image>digipost.azurecr.io/digipost/${project.artifactId}:${project.version}</image>
                    </to>
                    <container>
                        <mainClass>no.digipost.github.monitoring.MainKt</mainClass>
                        <jvmFlags>
                            <jvmFlag>-Dfile.encoding=UTF-8</jvmFlag>
                            <jvmFlag>-Dlogback.configurationFile=../logback.xml</jvmFlag>
                            <!-- Setter java.security.egd for å unngå heng ved generering av random numbers -->
                            <jvmFlag>-Djava.security.egd=file:///dev/urandom</jvmFlag>
                            <jvmFlag>-XX:+ExitOnOutOfMemoryError</jvmFlag>
                            <jvmFlag>-Dcom.ibm.mq.cfg.preferTLS=true</jvmFlag>
                            <jvmFlag>-Dcom.ibm.mq.cfg.useIBMCipherMappings=false</jvmFlag>
                        </jvmFlags>
                        <environment>
                            <TZ>Europe/Oslo</TZ>
                            <!--suppress MavenModelInspection -->
                            <Git-Commit>${git.commit.id.abbrev}</Git-Commit>
                            <!--suppress MavenModelInspection -->
                            <Git-Build-Time>${git.build.time}</Git-Build-Time>
                            <!--suppress MavenModelInspection -->
                            <Git-Build-Version>${git.build.version}</Git-Build-Version>
                            <Implementation-Title>${project.artifactId}</Implementation-Title>
                            <Build-Jdk-Spec>${java.version}</Build-Jdk-Spec>
                        </environment>
                    </container>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.ow2.asm</groupId>
                        <artifactId>asm</artifactId>
                        <version>9.1</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>mavenCentral</id>
            <url>https://repo1.maven.org/maven2/</url>
        </repository>
        <repository>
            <id>github</id>
            <url>https://maven.pkg.github.com/digipost/maven-package-registry</url>
        </repository>
    </repositories>

</project>
